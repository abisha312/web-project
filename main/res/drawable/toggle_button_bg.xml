<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when ToggleButton is checked (ON) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Green when ON -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Background when ToggleButton is unchecked (OFF) -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White when OFF -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
